{
  "name": "plinto-monorepo",
  "version": "1.0.0",
  "description": "Plinto multi-tenant payment platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "dev:api": "cd apps/api && python -m uvicorn app.main:app --reload",
    "dev:dashboard": "cd packages/dashboard && npm run dev",
    "build": "npm run build:packages && npm run build:apps",
    "build:packages": "npm run build:core && npm run build:sdk",
    "build:core": "cd packages/core && npm run build",
    "build:sdk": "cd packages/sdk-js && npm run build",
    "build:apps": "npm run build:dashboard",
    "build:dashboard": "cd packages/dashboard && npm run build",
    "test": "npm run test:packages && npm run test:api",
    "test:packages": "cd packages/core && npm test",
    "test:api": "cd apps/api && python -m pytest tests/ -v",
    "test:e2e": "cd packages/dashboard && npm run test:e2e",
    "lint": "npm run lint:packages",
    "lint:packages": "cd packages/core && npm run lint",
    "typecheck": "npm run typecheck:packages",
    "typecheck:packages": "cd packages/core && npm run typecheck",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "db:push": "prisma db push",
    "clean": "npm run clean:packages && npm run clean:build",
    "clean:packages": "cd packages/core && npm run clean",
    "clean:build": "rm -rf dist build .next out",
    "install:all": "npm install && npm run install:packages",
    "install:packages": "cd packages/core && npm install && cd ../dashboard && npm install"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "tsx": "^4.6.0",
    "typescript": "^5.0.0",
    "prisma": "^5.7.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}