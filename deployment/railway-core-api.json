{
  "name": "janua-core-api",
  "source": "apps/api",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "variables": {
    "PORT": "8000",
    "JANUA_ENV": "production",
    "JWT_AUDIENCE": "janua.dev",
    "JWT_ISSUER": "https://janua.dev",
    "COOKIE_DOMAIN": "janua.dev",
    "CORS_ORIGINS": "https://janua.dev,https://app.janua.dev,https://demo.janua.dev,https://docs.janua.dev,https://admin.janua.dev"
  },
  "domains": [
    {
      "domain": "api.janua.dev"
    }
  ],
  "networking": {
    "serviceName": "janua-core-api",
    "internalPort": 8000
  }
}