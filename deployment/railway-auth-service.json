{
  "name": "janua-auth-service",
  "source": "apps/auth-service",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300
  },
  "variables": {
    "PORT": "8001",
    "JANUA_ENV": "production",
    "JWT_AUDIENCE": "janua.dev",
    "JWT_ISSUER": "https://janua.dev"
  },
  "domains": [
    {
      "domain": "auth.janua.dev"
    }
  ],
  "networking": {
    "serviceName": "janua-auth-service",
    "internalPort": 8001
  }
}